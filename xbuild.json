{
	"Name": "xBuild",
	"Version": "2.0.0",
	"Version Files": [
		"xbuild.spec"
	],
	"Goals": {
		"build": {
			"Type": "group",
			"0": "composer-update"
		},
		"release": {
			"Type": "group",
			"0": "clean",
			"1": "git-pull",
			"2": "composer-install",
			"3": "rpm",
			"4": "deploy"
		},
		"rpm": {
			"Arch": "noarch",
			"Spec": "xbuild.spec"
		},
		"deploy": {
			"Files": [
				"target/<PROJECT_NAME>-<PROJECT_VERSION>-1.noarch.rpm"
			]
		}
	}
}
