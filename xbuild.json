{
	"Name": "xBuild",
	"Version": "2.0.0",
	"Version Files": [
		"xbuild.spec"
	],
	"Goals": {
		"build": {
			"Type": "group",
			"0": "composer-update"
		},
		"release": {
			"Type": "group",
			"0": "clean",
			"1": "composer-install",
			"2": "rpm",
			"3": "deploy"
		},
		"clean": {
		},
		"composer-install": {
			"Type": "composer",
			"Args": "install -a --profile"
		},
		"composer-update": {
			"Type": "composer",
			"Args": "update --profile"
		},
		"rpm": {
			"Arch": "noarch"
		},
		"deploy": {
			"Files": [
				"target/<PROJECT_NAME>-<PROJECT_VERSION>-1.noarch.rpm"
			]
		}
	}
}
