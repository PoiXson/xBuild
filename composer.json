{
	"name": "xBuild",
	"description": "Build and deploy scripts for PoiXson projects",
	"version": "0.2.0",
	"type": "project",
	"homepage": "http://poixson.com/",
	"license": "GPL-3",
	"keywords": [
		"build", "ci"
	],
	"support": {
		"issues": "https://github.com/PoiXson/xBuild/issues",
		"source": "https://github.com/PoiXson/xBuild",
		"irc":    "irc://irc.esper.net/poixson"
	},
	"authors": [{
		"name":  "lorenzop",
		"role":  "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\xBuild\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"pxn\\xBuild\\tests\\": "tests/",
			"pxn\\xBuild\\examples\\": "examples/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"require": {
		"php": "5.6.*",
		"pxn/phputils": "0.1.*",
		"monolog/monolog": "1.17.*",
		"symfony/console": "v3.0.*"
	},
	"require-dev": {
		"phpunit/phpunit": "5.2.*"
	}
}
